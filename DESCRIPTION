Package: crfsuite
Type: Package
Title: Conditional Random Fields for Labelling Sequential Data in Natural Language Processing
Version: 0.1
Maintainer: Jan Wijffels <jwijffels@bnosac.be>
Authors@R: c(
    person('Jan', 'Wijffels', role = c('aut', 'cre', 'cph'), email = 'jwijffels@bnosac.be'), 
    person('BNOSAC', role = 'cph'), 
